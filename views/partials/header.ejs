<script>
document.addEventListener("DOMContentLoaded", function() {
    const offset = 100; // Hoogte van je header
    const anchors = document.querySelectorAll('a[href^="/#"]'); // Vind alle ankerlinks die beginnen met /#

    for (let anchor of anchors) {
        anchor.addEventListener("click", function(event) {
            const href = this.getAttribute("href");
            const targetId = href.replace('/#', '#'); // Verwijder de slash voor correcte selectie
            const targetElement = document.querySelector(targetId);

            if (targetElement) {
                event.preventDefault(); // Voorkom standaardnavigatie alleen als het element bestaat
                const scrollToPosition = targetElement.offsetTop - offset;
                window.scrollTo({
                    top: scrollToPosition,
                    behavior: "smooth"
                });
            } // Als het element niet bestaat, doet de link zijn normale navigatie
        });
    }
});

  
